class Solution {
    public int maxProfit(int[] prices) {
        int minPrice = Integer.MAX_VALUE; // lowest price so far
        int maxProfit = 0;                // best profit so far

        for (int price : prices) {
            // check if today's price is better for buying
            if (price < minPrice) {
                minPrice = price;
            } 
            // check if selling today gives better profit
            else if (price - minPrice > maxProfit) {
                maxProfit = price - minPrice;
            }
        }

        return maxProfit;
    }
}
