
import java.util.*;

class Solution {
    public int numRabbits(int[] answers) {
        Map<Integer, Integer> freqMap = new HashMap<>();
        
        // Count frequency of each answer
        for (int ans : answers) {
            freqMap.put(ans, freqMap.getOrDefault(ans, 0) + 1);
        }
        
        int result = 0;
        for (Map.Entry<Integer, Integer> entry : freqMap.entrySet()) {
            int x = entry.getKey();    // rabbit's answer
            int count = entry.getValue(); // how many rabbits gave this answer
            
            int groupSize = x + 1;
            // Number of full groups needed
            int groups = (int) Math.ceil((double) count / groupSize);
            
            result += groups * groupSize;
        }
        
        return result;
    }
}
