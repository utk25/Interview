
internet ka bata do

monotonic stack

import java.util.Stack;

public class StockSpanSolver {

    public static int[] calculateSpan(int[] prices) {
        int n = prices.length;
        int[] span = new int[n];
        Stack<Integer> stack = new Stack<>(); // stores indices only

        for (int i = 0; i < n; i++) {
            // Pop while current price >= price at index on top of the stack
            while (!stack.isEmpty() && prices[stack.peek()] <= prices[i]) {
                stack.pop();
            }

            if (stack.isEmpty()) {
                span[i] = i + 1;  // No greater price on the left
            } else {
                span[i] = i - stack.peek();  // Distance to last greater price
            }

            stack.push(i); // Push current index
        }

        return span;
    }

    public static void main(String[] args) {
        int[] prices = {7, 2, 1, 2, 8};
        int[] spans = calculateSpan(prices);

        for (int s : spans) {
            System.out.print(s + " ");
        }
        // Output: 1 1 1 2 5
    }
}
